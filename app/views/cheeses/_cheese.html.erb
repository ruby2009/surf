<div class="contents">

    <div class="col-md-8 col-xs-9" id="left">

        <h1><%= @cheese.name %></h1>

        <strong>
            <%= link_to @cheese.author do %>
            <%= image_tag @cheese.author.avatar, class: "media-object img-circle" %>
            <% end %>
            <%= link_to @cheese.author.name, @cheese.author, class: "btn btn-default" %>
            <%= link_to "#{time_ago_in_words(@cheese.created_at)} ago", cheese %>
        </strong>

        <% post = @cheese.description.split('", "') %>
        <%= simple_format post.join("\n\n") %>

        <div class="row row-centered">
            <div class="btons">
                <button type="button" class="btn btn-default">
                    <span aria-hidden="true" class="glyphicon glyphicon-comment"></span>Read Comments</button>
                <button class="btn btn-default" type="button">
                    <span aria-hidden="true" class="glyphicon glyphicon-cloud-upload"></span>Read Later</button>
                <button class="btn btn-primary" type="button">
                    <span aria-hidden="true" class="glyphicon glyphicon-share"></span>Share This Cheese</button>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-xs-3" id="right">
        <div class="author">

            <%= link_to @cheese.author do %>
            <%= image_tag @cheese.author.avatar, class: "media-object img-circle" %>
            <% end %>

            <h4>
                <%= simple_format @cheese.author.name %>
            </h4>

            <div class="row row-centered">
                <div class="linx">
                    <a href="#">Twitter</a>
                    <a href="#">Facebook</a>
                    <a href="#">Instagram</a>
                </div>
            </div>

        </div>

        <%= simple_format @cheese.author.bio %>

    </div>
</div>
